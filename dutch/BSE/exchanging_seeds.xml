<?xml version="1.0"?>
<vxml version="2.0">

<var name="selected_seed_type_1" expr="''"/>
<var name="selected_seed_type_2" expr="''"/>
<var name="selected_seed_amount_1" expr="''"/>
<var name="selected_seed_amount_2" expr="''"/>
<var name="selected_phone_number" expr=""/>

<form id="select_seed_type_1">
  <field name="seed_type_input_1">
  <prompt bargein="true"><audio src="../audio_files/BSE/exchanging/exchange_intro.mp3"/></prompt>
    <option value="Sorgho"> Sorgho </option>
    <option value="Millet"> Millet </option>
    <option value="Petit mil">Petit mil</option>
  </field>
  <filled>
    <assign name="selected_seed_type_1" expr="seed_type_input_1"/>   
    <goto next="#select_amount_1"/>
  </filled>
</form>

<form id="select_amount_1">
  <field name="amount_input_1" type="number">
    <prompt><audio src="../audio_files/BSE/exchanging/how_much_receive.mp3"/></prompt>
    <noinput>
        <audio src="../audio_files/sorry/niet_begrepen.mp3"/><reprompt/>
        <reprompt/>
    </noinput>

    <nomatch>
        <audio src="../audio_files/sorry/geen_opties.mp3"/>
        <reprompt/>
    </nomatch>
    <filled>
      <assign name="selected_seed_amount_1" expr="amount_input_1"/>   
      <goto next="#select_seed_type_2"/>
    </filled>
  </field>
</form>

<form id="select_seed_type_2">
  <field name="seed_type_input_2">
    <prompt bargein="true"><audio src="../audio_files/BSE/exchanging/seed_type_give.mp3"/></prompt>
    <option value="Sorgho"> Sorgho </option>
    <option value="Millet"> Millet </option>
    <option value="Petit mil">Petit mil</option>
  </field>
  <filled>
    <assign name="selected_seed_type_2" expr="seed_type_input_2"/>   
    <goto next="#select_amount_2"/>
  </filled>
</form>

<form id="select_amount_2">
  <field name="amount_input_2" type="number">
    <prompt><audio src="../audio_files/BSE/exchanging/how_much_give.mp3"/></prompt>
    <noinput>
        <audio src="../audio_files/sorry/niet_begrepen.mp3"/><reprompt/>
        <reprompt/>
    </noinput>

    <nomatch>
        <audio src="../audio_files/sorry/geen_opties.mp3"/>
        <reprompt/>
    </nomatch>
    <filled>
      <assign name="selected_seed_amount_2" expr="amount_input_2"/>   
      <goto next="#select_phone_number"/>
    </filled>
  </field>
</form>
  
<form id="select_phone_number">
  <field name="input_phone_number" type="digits">
      <prompt bargein="true"><audio src="../audio_files/BSE/selling/telephone_number.mp3"/></prompt>
          <noinput>
            <audio src="../audio_files/sorry/niet_begrepen.mp3"/><reprompt/>
            <reprompt/>
          </noinput>

          <nomatch>
            <audio src="../audio_files/sorry/geen_opties.mp3"/>
            <reprompt/>
          </nomatch>
      <filled>
          <assign name="selected_phone_number" expr="input_phone_number"/>   
          <goto next="#recordMessage"/>
      </filled>
  </field>
</form>

<form id="recordMessage">
  <record name="msg" beep="true" maxtime="30s" finalsilence="4000ms" dtmfterm="true" type="audio/x-wav">
      <prompt timeout="5s"><audio src="../audio_files/BSE/selling/thanks_for_phone.mp3"/></prompt>
      <noinput><audio src="../audio_files/BSE/selling/I_didnt_hear.mp3"/></noinput>
      </record>
  <field name="confirmMessage">
      <prompt><audio src="../audio_files/BSE/selling/your_message_is.mp3"/> <audio expr="msg"/></prompt>
      <prompt><audio src="../audio_files/BSE/selling/submit_yes_no.mp3"/></prompt>
      <option value="yes">Yes</option>
      <option value="no">No</option>
      <noinput>
          <audio src="../audio_files/sorry/niet_begrepen.mp3"/><reprompt/>
          <reprompt/>
      </noinput>

      <nomatch>
          <audio src="../audio_files/sorry/geen_opties.mp3"/>
          <reprompt/>
      </nomatch>
  </field>
  <filled>
      <if cond="confirmMessage == 'yes'">
          <prompt><audio src="../audio_files/BSE/selling/submitted.mp3"/></prompt>
          <goto next="../dutch_main_menu.xml" />
      <elseif cond="confirmMessage == 'no'"/>
          <prompt><audio src="../audio_files/BSE/selling/discarded.mp3"/></prompt>
          <goto next="#recordMessage"/>
      <else>
          <prompt><audio src="../audio_files/sorry/niet_begrepen.mp3"/></prompt>
      </else>
      </if>
  </filled>
</form>
</vxml>