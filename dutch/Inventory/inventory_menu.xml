<vxml version="2.0">

  <!-- Main Menu as a Menu Element -->
  <menu id="inventory_menu" dtmf="true">
    <prompt>
        <audio src="../audio_files/inventory/inventory_welcome.mp3"/>
    </prompt>
    <choice dtmf="1" next="#seedTypes">zaadsoorten</choice>
    <choice dtmf="2" next="#seedQuantities">zaadhoeveelheden</choice>
    <choice dtmf="3" next="#seedPrices">zaadprijzen</choice>
    <choice dtmf="4" next="#additionalInfo">meer informatie</choice>
    <choice dtmf="0" next="../dutch_main_menu.xml">terug</choice>

    <noinput>
        <audio src="../audio_files/sorry/niet_begrepen.mp3"/>
        <reprompt/>
    </noinput>

    <nomatch>
        <audio src="../audio_files/sorry/geen_opties.mp3"/>
        <reprompt/>
    </nomatch>
  </menu>

  <!-- Form for Seed Types -->
  <form id="seedTypes">
    <block>
      <prompt>
        <audio src="../audio_files/inventory/seed_types.mp3"/>
      </prompt>
      <goto next="#inventory_menu"/>
    </block>
  </form>

  <!-- Form for Seed Quantities -->
  <form id="seedQuantities">
    <block>
      <prompt>
        <audio src="../audio_files/inventory/seed_quantities.mp3"/>
      </prompt>
      <goto next="#inventory_menu"/>
    </block>
  </form>

  <!-- Form for Seed Prices -->
  <form id="seedPrices">
    <block>
      <prompt>
        <audio src="../audio_files/inventory/seed_prices.mp3"/>
      </prompt>
      <goto next="#inventory_menu"/>
    </block>
  </form>

  <!-- Form for Additional Information -->
  <form id="additionalInfo">
    <block>
      <prompt>
        <audio src="../audio_files/inventory/additional_info.mp3"/>
      </prompt>
      <goto next="#inventory_menu"/>
    </block>
  </form>

</vxml>
